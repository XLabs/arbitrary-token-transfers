    "@yarnpkg/types": "^4.0.0",
    "bn.js": "^5.2.1"
  },
  "devDependencies": {
    "@types/bn.js": "^5.1.5",
    "@types/chai": "^4.3.19",
    "@types/mocha": "^10",
    "@types/node": "20.16.5",
    "chai": "^5.1.1",
    "mocha": "^10",
    "prettier": "^3.3.3",
    "ts-mocha": "^10",
    "tsx": "^4.19.1",
    "typescript": "5.6.2"
  },
  "workspaces": [
    "sdk/evm",
    "sdk/solana",
    "evm",
    "solana",
    "deployment"
  ],
  "packageManager": "yarn@4.4.1"
