{
  "name": "solana",
  "scripts": {
    "lint:fix": "prettier */*.js \"*/**/*{.js,.ts}\" -w",
    "lint": "prettier */*.js \"*/**/*{.js,.ts}\" --check",
    "build:devnet": "anchor build -- --features solana-devnet && rm ../sdk/solana/tbrv3/idl/token_bridge_relayer.json && cp ../target/idl/token_bridge_relayer.json ../sdk/solana/tbrv3/idl && yarn run build:ts",
    "build:ts": "yarn run tsc --project ./tsconfig.json",
    "build": "anchor build && rm ../sdk/solana/tbrv3/idl/token_bridge_relayer.json && cp ../target/idl/token_bridge_relayer.json ../sdk/solana/tbrv3/idl && yarn run build:ts",
    "clean:ts": "rm -rf ts-build/",
    "clean": "yarn run clean:ts && rm -rf ../target/idl ../target/types",
    "test": "anchor run setup-test && anchor test"
  },
  "type": "module",
  "dependencies": {
    "@coral-xyz/anchor": "^0.30.1",
    "@solana/web3.js": "^1.95.3",
    "@types/chai": "^4.3.19",
    "@types/mocha": "8.*",
    "@wormhole-foundation/sdk-base": "^0.10.7",
    "@wormhole-foundation/sdk-definitions": "^0.10.7",
    "@wormhole-foundation/sdk-solana-core": "^0.10.7",
    "@wormhole-foundation/sdk-solana-tokenbridge": "^0.10.7",
    "@xlabs-xyz/solana-arbitrary-token-transfers": "workspace:^",
    "chai": "^5.1.1",
    "mocha": "8.*",
    "ts-mocha": "8.*",
    "typescript": "^5.6.2"
  }
}
