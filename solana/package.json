{
  "name": "solana",
  "scripts": {
    "lint:fix": "prettier */*.js \"*/**/*{.js,.ts}\" -w",
    "lint": "prettier */*.js \"*/**/*{.js,.ts}\" --check",
    "build:contract:devnet": "anchor build -- --features solana-devnet",
    "build:ts": "yarn run tsc --project ./tsconfig.json",
    "build:contract:mainnet": "anchor build",
    "build": "yarn build:contract:mainnet && yarn build:ts",
    "clean:ts": "rm -rf ts-build/",
    "clean": "yarn run clean:ts && rm -rf ../target/idl ../target/types",
    "test": "anchor run setup-test && anchor test"
  },
  "type": "module",
  "dependencies": {
    "@coral-xyz/anchor": "^0.30.1",
    "@solana/web3.js": "^1.95.3",
    "@types/chai": "^5",
    "@types/mocha": "10.*",
    "@wormhole-foundation/sdk-base": "^0.12.0",
    "@wormhole-foundation/sdk-definitions": "^0.12.0",
    "@wormhole-foundation/sdk-solana-core": "^0.12.0",
    "@wormhole-foundation/sdk-solana-tokenbridge": "^0.12.0",
    "@xlabs-xyz/solana-arbitrary-token-transfers": "workspace:^",
    "chai": "^5.1.1",
    "mocha": "10.*",
    "ts-mocha": "10.*",
    "typescript": "^5.6.3"
  }
}
